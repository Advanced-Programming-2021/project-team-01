<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane styleClass="background" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.DeckPreview"
            prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@predeck.css"/>
    </stylesheets>
    <center>
        <HBox alignment="CENTER" spacing="30">
            <VBox spacing="15" alignment="CENTER">
                <ChoiceBox prefWidth="100" fx:id="deckBar"/>
                <Button styleClass="but" prefWidth="100" text="Delete deck" onMouseClicked="#deleteDeck"/>
                <Button styleClass="but" prefWidth="100" text="Customize" onMouseClicked="#startDeckView"/>
                <Button styleClass="but" prefWidth="100" text="Activate deck" onMouseClicked="#activateDeck"/>
                <Button styleClass="but" prefWidth="100" text="Exit" onMouseClicked="#exit"/>
            </VBox>
            <VBox spacing="15" alignment="CENTER">
                <TextField fx:id="textField" text="Deck name :" prefWidth="100"/>
                <Button styleClass="but" prefWidth="100" text="Create deck" onMouseClicked="#createDeck"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
